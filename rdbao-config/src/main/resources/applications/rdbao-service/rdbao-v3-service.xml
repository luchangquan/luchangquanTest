	<aop:aspectj-autoproxy />
	<!-- 自动扫描的包名 -->
	<context:component-scan
		base-package="com.renke.rdbao.services.rdbao_v3.service.interceptor">
		<context:include-filter type="annotation"
			expression="org.springframework.stereotype.Component" />
	</context:component-scan>


	<!-- 事务管理 -->
	<bean id="rdbaov3TransactionManager4service"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="rdbaov3DataSource" />
	</bean>

	<tx:advice id="rdbaov3TxAdvice4service" transaction-manager="rdbaov3TransactionManager4service">
		<tx:attributes>
			<tx:method name="save*" propagation="REQUIRED" />
			<tx:method name="create*" propagation="REQUIRED" />
			<tx:method name="generate*" propagation="REQUIRED" />
			<tx:method name="add*" propagation="REQUIRED" />
			<tx:method name="cancle*" propagation="REQUIRED" />
			<tx:method name="update*" propagation="REQUIRED" />
			<tx:method name="delete*" propagation="REQUIRED" />
			<tx:method name="register*" propagation="REQUIRED" />
			<tx:method name="*" read-only="true" />
		</tx:attributes>
	</tx:advice>

	<!-- service配置事务 -->
	<aop:config>
		<aop:pointcut id="rdbaov3InterceptorPointCuts4service"
			expression="execution(* com.renke.rdbao.services.rdbao_v3.service.*.*(..))" />
		<aop:advisor advice-ref="rdbaov3TxAdvice4service"
			pointcut-ref="rdbaov3InterceptorPointCuts4service" />
	</aop:config>

</beans>   