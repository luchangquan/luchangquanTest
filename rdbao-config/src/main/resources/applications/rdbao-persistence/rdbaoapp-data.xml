<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
            http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.2.xsd
            http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.2.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd
             http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd">

	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="order" value="1" />
		<property name="ignoreUnresolvablePlaceholders" value="true" />
		<property name="locations">
			<list>
				<value>classpath*:properties/${publish.evn}/jdbc.properties</value>
			</list>
		</property>
	</bean>


	<!-- 自动扫描的包名 -->
	<context:component-scan base-package="com.renke.rdbao.daos.rdbaoapp.dao.impl">
		<context:include-filter type="annotation"
			expression="org.springframework.stereotype.Repository" />
	</context:component-scan>

	<!-- 配置监控 -->
	<bean id="rdbaoapp-stat-filter" class="com.alibaba.druid.filter.stat.StatFilter">
		<property name="mergeSql" value="true" />
		<property name="logSlowSql" value="true" />
	</bean>

	<!-- druid数据源 -->
	<bean id="rdbaoappDataSource" class="com.alibaba.druid.pool.DruidDataSource"
		init-method="init" destroy-method="close">

		<property name="driverClassName" value="${jdbc.rdbaoapp.driverClass}" />
		<property name="url" value="${jdbc.rdbaoapp.url}" />
		<property name="username" value="${jdbc.rdbaoapp.username}" />
		<property name="password" value="${jdbc.rdbaoapp.password}" />

		<property name="filters" value="stat" />
		<property name="maxActive" value="20" />
		<property name="initialSize" value="1" />
		<property name="maxWait" value="60000" />
		<property name="minIdle" value="3" />

		<property name="timeBetweenEvictionRunsMillis" value="60000" />
		<property name="minEvictableIdleTimeMillis" value="300000" />

		<property name="validationQuery" value="SELECT 'rdbaoapp'" />
		<property name="testWhileIdle" value="true" />
		<property name="testOnBorrow" value="false" />
		<property name="testOnReturn" value="false" />


		<!-- 连接属性 -->
		<property name="connectionProperties" value="clientEncoding=UTF-8" />
	</bean>

	<!-- mybatis SessionFactory -->
	<bean id="rdbaoappSqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="configLocation"
			value="classpath:applications/rdbao-persistence/mybatis-config.xml"></property>
		<property name="dataSource" ref="rdbaoappDataSource" />
		<property name="mapperLocations"
			value="classpath:com/renke/rdbao/daos/rdbaoapp/dao/mapper/*_mapper.xml" />
		<property name="plugins">
			<array>
				<bean class="com.github.pagehelper.PageHelper">
					<property name="properties">
						<value>
							dialect=mysql
							reasonable=false
							offsetAsPageNum=false
							rowBoundsWithCount=false
							pageSizeZero=false
						</value>
					</property>
				</bean>
			</array>
		</property>
	</bean>


	<bean class="tk.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" value="com.renke.rdbao.daos.rdbaoapp.dao.mapper" />
		<property name="sqlSessionFactoryBeanName" value="rdbaoappSqlSessionFactory" />
		<property name="properties">
			<value>
				mappers=tk.mybatis.mapper.common.Mapper,tk.mybatis.mapper.common.MySqlMapper
				IDENTITY=MYSQL
				notEmpty=false
			</value>
		</property>
	</bean>

	<!-- 事务管理 -->
	<bean id="rdbaoappTransactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="rdbaoappDataSource" />
	</bean>

	<tx:advice id="rdbaoappTxAdvice" transaction-manager="rdbaoappTransactionManager">
		<tx:attributes>
			<tx:method name="save*" propagation="REQUIRED" />
			<tx:method name="insert*" propagation="REQUIRED" />
			<tx:method name="update*" propagation="REQUIRED" />
			<tx:method name="delete*" propagation="REQUIRED" />
			<tx:method name="cancle*" propagation="REQUIRED" />
			<tx:method name="deal*" propagation="REQUIRED" />
			<tx:method name="*" read-only="true" />
		</tx:attributes>
	</tx:advice>

	<aop:config>
		<aop:pointcut id="rdbaoappInterceptorPointCuts"
			expression="execution(* com.renke.rdbao.daos.rdbaoapp.dao.*.*(..))" />
		<aop:advisor advice-ref="rdbaoappTxAdvice" pointcut-ref="rdbaoappInterceptorPointCuts" />
	</aop:config>

</beans>